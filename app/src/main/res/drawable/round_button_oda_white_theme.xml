<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    //The desired color and color border
    <stroke android:width="@dimen/custom_view_border_1dp"
        android:color="@color/custom_view_white_theme_dark_blue_color" />
    <solid android:color="@color/custom_view_white_theme_dark_blue_color"/>

    // The desired corner radius. reduce it to keep it less rounded
    <corners android:radius="@dimen/custom_view_radius_5dp" />

    // Add your desired padding
    <padding
        android:left="@dimen/custom_view_padding_20dp"
        android:top="@dimen/custom_view_padding_10dp"
        android:right="@dimen/custom_view_padding_20dp"
        android:bottom="@dimen/custom_view_padding_10dp">
    </padding>

</shape>